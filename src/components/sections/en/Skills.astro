---
import Section from "@/components/Section.astro";
import { titles } from "@cv-en";
import { skills } from "@cv-en";
---

<Section title={titles.skills}>
  <ul>
    {
      skills.map(({ name }) => (
        <li>
          <span>{name}</span>
        </li>
      ))
    }
  </ul>
</Section>

<style>
  ul {
    display: inline-flex;
    gap: 8px;
    flex-wrap: wrap;
  }

  li {
    border-radius: 6px;
    background: #eee;
    color: black;
    font-size: 0.7rem;
    font-weight: 500;
    padding: 0.2rem 0.6rem;
  }
</style>
